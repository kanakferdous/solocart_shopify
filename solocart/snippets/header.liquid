<header class="site-header" style="background-color: {{ settings.header_background_color }};">
  {% include 'top-bar' %}
  <div class="container">
    <nav class="site-nav">
      <button class="hamburger-menu">
        {% include 'icon-hamburger' %}
      </button>
      <div class="logo">
        <a href="{{ shop.url }}">
          {% if settings.logo_image %}
            <img src="{{ settings.logo_image | img_url: 'master' }}" alt="{{ shop.name }}" style="width: {{ settings.logo_width }}px; height: {{ settings.logo_height }}px;" />
          {% else %}
            <span style="font-size: {{ settings.logo_height / 2 }}px; line-height: {{ settings.logo_height }}px;">
              {{ settings.logo_text }}
            </span>
          {% endif %}
        </a>
      </div>
      <div class="header-icons">
        <a href="#" class="cart-icon">
          <i class="fa-solid fa-cart-shopping"></i>
          <span class="cart-count">{{ cart.item_count | default: 0 }}</span>
        </a>
        <a href="/account" class="account-icon">
          <i class="fa-solid fa-user"></i>
        </a>
      </div>
    </nav>
    <div class="main-nav-menu" id="main-nav-menu">
      <button class="close-menu">
        <i class="fa-solid fa-xmark"></i>
      </button>
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    {% include 'banner' %}
  </div>
  <!-- Fly-In Cart Sidebar -->
  <div id="cart-sidebar" class="cart-sidebar">
    <div class="cart-sidebar-wrapper">
      <div class="cart-sidebar-header">
        <span class="close-cart"><i class="fa-solid fa-xmark"></i></span>
        <h2>Your Cart</h2>
      </div>
      <div class="cart-items">
        <!-- Cart items will be dynamically inserted here -->
      </div>
      <div class="cart-sidebar-footer">
        <div class="cart-total">
          <span>Total: </span>
          <span class="cart-total-price">$0.00</span>
        </div>
        <div class="cart-buttons">
          <button class="btn-primary btn-update-cart">Update Cart</button>
          <a href="/cart" class="btn-primary-small btn-view-cart">View Cart</a>
          <a href="/checkout" class="btn-primary-small btn-checkout">Checkout</a>
        </div>
      </div>
    </div>
  </div>
</header>